{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/backend/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "./tsconfig.base.json"
  },
  "monorepo": true,
  "root": "apps/backend",
  "projects": {
    "backend": {
      "type": "application",
      "root": "apps/backend",
      "entryFile": "main",
      "sourceRoot": "apps/backend/src",
      "compilerOptions": {
        "tsConfigPath": "apps/backend/tsconfig.backend.json"
      }
    },
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.api-gateway.json"
      }
    },
    "payment-service": {
      "type": "application",
      "root": "apps/payment-service",
      "entryFile": "main",
      "sourceRoot": "apps/payment-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/payment-service/tsconfig.payment-service.json"
      }
    },
    "frontend": {
      "type": "application",
      "root": "apps/frontend",
      "entryFile": "main",
      "sourceRoot": "apps/frontend/src",
      "compilerOptions": {
        "tsConfigPath": "apps/frontend/tsconfig.json"
      }
    },
    "libs": {
      "type": "application",
      "root": "apps/libs",
      "entryFile": "main",
      "sourceRoot": "apps/libs/src",
      "compilerOptions": {
        "tsConfigPath": "apps/libs/tsconfig.libs.json"
      }
    }
  }
}
