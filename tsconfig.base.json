{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    //"strict": true, // If you want to humiliate yourself and realize you wrote crappy code, comment on this.
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2022",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "lib": [
      "es2022",
      "dom"
    ]
  },
  "paths": {
    "@apps/frontend/*": ["apps/frontend/src/*"],
    "@apps/backend/*": ["apps/backend/src/*"],
    "@apps/payment-service/*": ["apps/payment-service/src/*"],
    "@libs/api-documentation/*": ["libs/api-documentation/*"],
    "@libs/common/*": ["libs/common/*"],
    "@libs/data-cleanup/*": ["libs/data-cleanup/*"],
    "@libs/rabbitmq/*": ["libs/rabbitmq/src/*"],
    "@libs/mails/*": ["libs/mails/*"],
    "@libs/scheduling/*": ["libs/scheduling/*"]
  },
  "include": ["apps/**/*.ts", "libs/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
